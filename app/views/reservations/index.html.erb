<div class="notifications">
  <% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</div>
<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @reservation.each do |reservation| %>
        <tr>
          <td><a href="/rooms/<%= reservation.room_id %>"><img src=<%= reservation.room.image%> class="reservations-image" /></a></td>
          <td class="posts-name"><a href="/rooms/<%= reservation.room_id %>"><%= reservation.room.name %></a></td>
          <td class="posts-content"><%= reservation.room.content %></td>
          <td class="price-icon"><%= reservation.total_amount %></td>
          <td><%= reservation.start_date %></td>
          <td><%= reservation.end_date %></td>
          <td><%= reservation.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
