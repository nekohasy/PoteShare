<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <img src=<%= @room.image %> alt="部屋画像" class="room-show-image" />
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <a href="/"><img class="host-icon" src="/assets/default_icon.jpg" /></a>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.content %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <%= form_with url: "/reservations/new", method: :get do |f| %>
            <%= f.label :start_date ,"開始日" %>
            <%= f.date_field :start_date, id: "start_date", class: "form-control mb-4" %>
            <%= f.label :end_date ,"終了日" %>
            <%= f.date_field :end_date, id: "end_date", class: "form-control mb-4" %>
            <%= f.label :person_num ,"人数" %>
            <%= f.number_field :person_num, id: "person_num", class: "form-control mb-4" %>
            <%= f.hidden_field :room_id, id: "room_id", value: @room.id %>
            <%= f.submit "commit", value: "予約する", class: "btn btn-primary form-control", data: { disable_with: "予約する" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
