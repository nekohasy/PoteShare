<div class="notifications">
  <% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</div>
<div class="container device">
  <div class="device_frame">
    <p class="my-4">ログイン</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-row">
        <div class="col-2 required-b pt-2"></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-10 px-2", id: "user_email", :placeholder => "メールアドレス"%>
      </div>

      <div class="field form-row">
        <div class="col-2 required-b pt-2"></div>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-10 px-2", id: "user_password", :placeholder => "パスワード"%>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "form-control btn-primary my-4", data: { disable_with: "ログイン" } %>
      </div>
      <% end %>

  <%= render "users/shared/links" %>
    </div>
  </div>
</div>
